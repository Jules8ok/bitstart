<%
require 'net/http'
require 'json'

%>


<div class="wrapper-grey padded">
  <div class="container1">
    <h2 class="text-center searchby1">Les cryptos <br><br><br></h2>
    <% @cryptos.each do |crypto| %>
    <%
    url = 'https://api.coinmarketcap.com/v1/ticker/'+ crypto.name+'/'
    uri = URI(url)
    response = Net::HTTP.get(uri)
    JSON.parse(response)

    @my_hash = JSON.parse(response)
    %>
    <div class="row1">
      <div class="col-xs-12 col-sm-4">
        <div class="card1" style="margin-top: 10px;background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))">
          <div class="card1-description" style=" margin-left: 10px;">
            <h2><%=crypto.name%> </h2>
            <span style=" font-size: 16px;"><%= @my_hash[0]["price_usd"] %> $</span>
            <p style="font-size: 12px;"><%= crypto.address%></p>
            <%= link_to t(".button", default: "Take a look"), crypto_path(crypto), class: "card-link" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>

</div>

<br> <br> <br><br> <br> <br><br> <br> <br> <br> <br> <br><br> <br>
