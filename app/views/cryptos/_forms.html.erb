<div class="wrapper-grey padded">

  <%= simple_form_for(@crypto) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "Le nom de la crypto" %>
    <%= f.input :address, placeholder: "Description en quelques mots" %>
    <%= f.input :description, placeholder: "Descriptions complète" %>
    <%= f.input :Personal, placeholder: "Remarque personelle" %>
    <%= f.input :Web, placeholder: "Website" %>
    <%= f.input :date, placeholder: "Les dates à venir" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <br>

  <div class="form-actions">

  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>

  <% end %>


</div>




